ctrl + alt - r : yabai --restart-service; skhd --restart-service

# enter fullscreen mode for the focused container
alt - f : yabai -m window --toggle zoom-fullscreen

# change focus between tiling / floating windows
# shift + alt - space : yabai -m window --toggle float

# change layout of desktop
alt - e : yabai -m space --layout bsp

# kill focused window
# shift + alt - q : chunkc tiling::window --close

# change focus
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# alt - p : yabai -m window --focus prev
# alt - n : yabai -m window --focus next

# move focused window
shift + alt - h : yabai -m window --warp west
shift + alt - j : yabai -m window --warp south
shift + alt - k : yabai -m window --warp north
shift + alt - l : yabai -m window --warp east

alt - r : yabai -m space --rotate 90
alt - w : yabai -m space --balance

# move focused container to workspace
shift + ctrl - 1 : yabai -m window --space 1
shift + ctrl - 2 : yabai -m window --space 2
shift + ctrl - 3 : yabai -m window --space 3
shift + ctrl - 4 : yabai -m window --space 4
